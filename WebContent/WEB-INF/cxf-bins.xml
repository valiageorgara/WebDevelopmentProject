<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxws="http://cxf.apache.org/jaxws" 
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
	http://cxf.apache.org/jaxws 
	http://cxf.apache.org/schemas/jaxws.xsd 
	http://cxf.apache.org/jaxrs 
	http://cxf.apache.org/schemas/jaxrs.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<bean id="User" class="rest.UserEndpoint" />
	<bean id="Post" class="rest.PostsEndpoint" />
	<bean id="Message" class="rest.MessagesEndpoint" />	
	<bean id="Contact" class="rest.ContactsEndpoint" />
	<bean id="Comment" class="rest.CommentsEndpoint" />		
	<jaxrs:server id="base" address="/">	
		<jaxrs:serviceBeans>
			<ref bean="User"/>
			<ref bean="Post"/>
			<ref bean="Message"/>
			<ref bean="Contact"/>
			<ref bean="Comment" />						
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<!-- bean class="utilities.CustomJSONProvider"/-->
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
		</jaxrs:providers>
	</jaxrs:server>
</beans>